root = true

[*]
charset = "utf-8"
indent_style = "space"
insert_final_newline = true
trim_trailing_whitespace = true

[*.hcl]
indent_size  = 2
tab_width    = 2

[*.json{,c}]
indent_size  = 2
tab_width    = 2

[*.m{d,arkdown}]
indent_size  = 4
tab_width    = 4

[*.y{,a}ml]
indent_size  = 2
tab_width    = 2

[openbsd/*.conf]
indent_size  = 8
indent_style = "tab"
tab_width    = 8
